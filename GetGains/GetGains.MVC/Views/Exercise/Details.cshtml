@model GetGains.MVC.Models.Exercises.ExerciseViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="col-6 offset-3">

        <h1>@Model.Name</h1>

            

        <div>
            @if (!string.IsNullOrWhiteSpace(Model.MediaUrl))
            {
                <img class="img-fluid" src="@Model.MediaUrl" />
            }
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.BodyPart)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.BodyPart)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                
                @if(Model.Instructions?.Count > 0)
                {
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Instructions)
                    </dt>
                    <dd class = "col-sm-10">
                        @foreach (var instruction in Model.Instructions)
                        {
                            <p>
                                @($"{instruction.StepNumber}) {instruction.Text}")
                            </p>
                        }
                    </dd>
                }
                
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Author)
                </dd>
            </dl>
        </div>

        <div>
            <a asp-controller="Exercise" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a asp-controller="Exercise" asp-action="Delete" asp-route-id="@Model.Id" class="text-danger">Delete</a> |
            <a asp-controller="Exercise" asp-action="Index">Back to List</a>
        </div>

    </div>
</div>

